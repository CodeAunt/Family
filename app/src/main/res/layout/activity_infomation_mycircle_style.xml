<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/infomation_mycircle_list_item_selector"
    android:orientation="horizontal"
    android:gravity="end">

    <TextView
        android:id="@+id/activity_infomation_mycircle_style_txt_groupname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="48dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="48dp"
        android:textColor="#000000"
        android:text="送呼吁"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/activity_infomation_mycircle_style_img_houose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/user_icon_7"
        android:visibility="invisible"
        android:layout_toRightOf="@id/activity_infomation_mycircle_style_txt_groupname"/>
</RelativeLayout>