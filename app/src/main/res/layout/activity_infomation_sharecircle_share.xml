<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ver="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".information.Infomation_sharecircle_share">
    <!-- 导航栏 -->
    <LinearLayout
        android:id="@+id/Infomation_sharecircle_share_layout_actionbar"
        android:orientation="vertical"
        android:background="@xml/themecolor"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <!--状态栏留白-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <!-- 右边总布局.》》导航栏 》》头像-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/Infomation_sharecircle_share_actionbar_img_back"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@mipmap/login_btn_back"/>

            </LinearLayout>

            <!-- 右边总布局.》》导航栏 》》标题-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>
            <!-- 右边总布局.》》导航栏》》右块 -->
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Infomation_sharecircle_share_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Infomation_sharecircle_share_layout_actionbar"
        android:orientation="vertical"
        android:layout_alignLeft="@+id/Infomation_sharecircle_share_layout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="116dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="邀请码已经生成"/>
        <TextView
            android:id="@+id/Infomation_sharecircle_share_txt_invitecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="48sp"
            android:textColor="#0bb399"
            android:gravity="left"
            android:text="726679"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="14sp"
            android:textColor="#aaaaaa"
            android:gravity="left"
            android:text="分享邀请码至尚未加入小圈圈的亲友手中"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Infomation_sharecircle_share_layout2"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Infomation_sharecircle_share_layout1">

        <Button
            android:id="@+id/Infomation_sharecircle_share_btn_nextstep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/corner_green"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="分享"/>
    </LinearLayout>
</RelativeLayout>