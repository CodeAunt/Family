<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chat_msg_members_style_img_headimg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/user_img1"/>
    <TextView
        android:id="@+id/chat_msg_members_style_txt_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="27dp"
        android:gravity="center|left"
        android:layout_toRightOf="@+id/chat_msg_members_style_img_headimg"
        android:layout_toLeftOf="@+id/chat_msg_members_style_txt_manager"
        android:textColor="#040000"
        android:text="送呼吁"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/chat_msg_members_style_txt_manager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:text="管理员"
        android:textColor="#999999"
        android:textSize="15sp"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_alignParentRight="true"/>

</RelativeLayout>