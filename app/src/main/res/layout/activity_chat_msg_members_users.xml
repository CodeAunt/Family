<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".chat.Chat_msg_members_users">

    <!-- 导航栏 -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@xml/themecolor"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <!--状态栏留白-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <!-- 右边总布局.》》导航栏 》》头像-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:id="@+id/chat_msg_members_users_actionbar_img_back"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@mipmap/login_btn_back"/>

            </LinearLayout>

            <!-- 右边总布局.》》导航栏 》》标题-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>
            <!-- 右边总布局.》》导航栏》》右块 -->
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/chat_msg_members_users_img_headimg"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/user_img1"/>
    <TextView
        android:id="@+id/chat_msg_members_users_txt_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textSize="20sp"
        android:textColor="#040000"
        android:text="宋慧宇"/>
    <TextView
        android:id="@+id/chat_msg_members_users_txt_phone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textSize="20sp"
        android:textColor="#6d6e6d"
        android:text="手机号：18580543261"/>
    <Button
        android:id="@+id/chat_msg_members_users_btn_sendmsg"
        android:background="@drawable/corner_chat_members_sendmsg"
        android:layout_width="185dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="发消息"/>

</LinearLayout>