<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Login5">
    <ImageView
        android:id="@+id/login5_img_back"
        android:layout_width="12dp"
        android:layout_height="21dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:src="@mipmap/login_nav_back"/>
    <LinearLayout
        android:id="@+id/login5_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/login5_img_back"
        android:layout_alignLeft="@+id/login5_layout2">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="59dp"
            android:src="@mipmap/login_logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="left"
            android:text="创建小圈圈"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/login5_layout2"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login5_layout1">
        <EditText
            android:id="@+id/login5_edt_groupname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:textSize="16sp"
            android:maxLength="11"
            android:textColor="#000000"
            android:singleLine="true"
            android:gravity="left"
            android:theme="@style/MyEditText"
            android:hint="小圈圈名"/>

        <Button
            android:id="@+id/login5_btn_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/corner_grey"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="完成"/>

    </LinearLayout>


</RelativeLayout>