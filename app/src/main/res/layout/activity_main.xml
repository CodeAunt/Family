<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:momoradius="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sucess_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 左边总布局. -->
    <LinearLayout
        android:layout_gravity="start"
        android:background="#0bb399"
        android:orientation="vertical"
        android:id="@+id/mainactivity_layout_left"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        >

        <!-- 左边总布局.》》上边布局 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_marginLeft="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="56dp"
                    android:src="@mipmap/user_img1"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="68dp"
                    android:layout_marginLeft="16dp">
                    <TextView
                        android:id="@+id/mainactivity_left_txt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:gravity="left"
                        android:textColor="#ffffff"
                        android:text="陌默"/>
                    <TextView
                        android:id="@+id/mainactivity_left_txt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="1008611102"
                        android:textSize="12sp"
                        android:textColor="#b3ffffff"
                        android:gravity="left" />
                </LinearLayout>


                </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/user_icon_0"/>
                <TextView
                    android:id="@+id/mainactivity_left_txt_groupname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:text="宋慧宇的小屋"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 左边总布局.》》下边布局 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/infomation_layout_mycircle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:background="@drawable/infomation_click_selector"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/user_icon_1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="我的小圈圈"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/infomation_layout_newcircle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:background="@drawable/infomation_click_selector"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/user_icon_2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="创建小圈圈"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/infomation_layout_joincircle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:background="@drawable/infomation_click_selector"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/user_icon_3" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="加入小圈圈"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/infomation_layout_invitecircle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:background="@drawable/infomation_click_selector"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/user_icon_4" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="邀请亲友加入"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#e8e8e8"></LinearLayout>
                <LinearLayout
                    android:id="@+id/infomation_layout_sharecircle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:background="@drawable/infomation_click_selector"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/user_icon_5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="分享小圈圈"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/infomation_layout_fedback"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:background="@drawable/infomation_click_selector"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/user_icon_6"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="用户反馈"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <!-- 右边总布局. -->
    <LinearLayout

        android:gravity="top"
        android:orientation="vertical"
        android:id="@+id/mainactivity_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 右边总布局.》》导航栏 -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@xml/themecolor"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <!--状态栏留白-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <!-- 右边总布局.》》导航栏 》》头像-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/mainactivity_actionbar_img_headimg"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="16dp"
                        android:src="@mipmap/user_img1"/>

                </LinearLayout>

                <!-- 右边总布局.》》导航栏 》》标题-->
                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/mainactivity_actionbar_txt_title"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:text="测试"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <!-- 右边总布局.》》导航栏 》》右边-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="right|center"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/mainactivity_actionbar_img_right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/icon_add_whtie"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <!-- 右边总布局.》》正文页-->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <family.momo.com.family.DefinedViews.ReViewPager
                android:layout_marginTop="50dp"
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </family.momo.com.family.DefinedViews.ReViewPager>

            <!-- 右边总布局.》》正文》》下边-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56sp">



                <LinearLayout
                    android:id="@+id/mainactivity_layout_photo"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/mainactivity_img_photo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/icon_photo_pre"/>
                    <TextView
                        android:id="@+id/mainactivity_txt_photo"
                        android:gravity="center"
                        android:text="相册"
                        android:textSize="12sp"
                        android:textColor="#0bb399"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mainactivity_layout_location"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/mainactivity_img_location"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/icon_position_nor"/>
                    <TextView
                        android:id="@+id/mainactivity_txt_location"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="定位"
                        android:textColor="#999999"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mainactivity_layout_communicate"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/mainactivity_img_communicate"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/icon_chat_nor"/>
                    <TextView
                        android:id="@+id/mainactivity_txt_communicate"
                        android:gravity="center"
                        android:text="通讯"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/></LinearLayout>
                <LinearLayout
                    android:id="@+id/mainactivity_layout_house"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/mainactivity_img_house"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/icon_home_nor"/>
                    <TextView
                        android:id="@+id/mainactivity_txt_house"
                        android:gravity="center"
                        android:text="家居"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/></LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>








</android.support.v4.widget.DrawerLayout>